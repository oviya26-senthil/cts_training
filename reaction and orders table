Create the user table
CREATE TABLE users (
    id INT AUTO_INCREMENT PRIMARY KEY,
    username VARCHAR(50),
    email VARCHAR(100),
    age INT,
    city VARCHAR(50),
    joined_at DATETIME,
    status VARCHAR(20),
    bio TEXT
);
Insert the data
INSERT INTO users (username, email, age, city, joined_at, status, bio) VALUES
